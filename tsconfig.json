{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017",
      "es6",
      "es5",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "declaration": true,
    /* Generates corresponding '.d.ts' file. */
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "./src"
  ]
}
